<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="theissl.stefan.picturepuzzle.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_info"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="24sp" />

    <TableLayout
        android:layout_width="320dp"
        android:layout_height="320dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/tableLayout">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageButton
                android:layout_width="100px"
                android:layout_height="80dp"
                android:textSize="36sp"
                android:id="@+id/btn_1"/>

            <ImageButton
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:textSize="36sp"
                android:id="@+id/btn_2"/>

            <ImageButton
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:textSize="36sp"
                android:id="@+id/btn_3"/>

            <ImageButton
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:textSize="36sp"
                android:id="@+id/btn_4"/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageButton
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:textSize="36sp"
                android:id="@+id/btn_5"/>

            <ImageButton
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:textSize="36sp"
                android:id="@+id/btn_6"/>

            <ImageButton
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:textSize="36sp"
                android:id="@+id/btn_7"/>

            <ImageButton
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:textSize="36sp"
                android:id="@+id/btn_8"/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageButton
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:textSize="36sp"
                android:id="@+id/btn_9"/>

            <ImageButton
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:textSize="36sp"
                android:id="@+id/btn_10"/>

            <ImageButton
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:textSize="36sp"
                android:id="@+id/btn_11"/>

            <ImageButton
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:textSize="36sp"
                android:id="@+id/btn_12"/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageButton
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:textSize="36sp"
                android:id="@+id/btn_13"/>

            <ImageButton
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:textSize="36sp"
                android:id="@+id/btn_14"/>

            <ImageButton
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:textSize="36sp"
                android:id="@+id/btn_15"/>

            <ImageButton
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:textSize="36sp"
                android:id="@+id/btn_16"/>

        </TableRow>

    </TableLayout>

    <TextView
        android:text="Noch nicht korrekt!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tableLayout"
        android:layout_alignStart="@+id/tableLayout"
        android:layout_marginTop="15dp"
        android:id="@+id/txt_winLose"
        android:textSize="24sp" />

    <Button
        android:text="new Game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_newGame"
        android:enabled="false"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
